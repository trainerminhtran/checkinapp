@model Checkinapp.ViewModels.QuizManagerListView
@if (Model != null)
{
    <div class="modal-header" style="display: block">
        <h4 class="text-center">@Model.TestName</h4>
        <h6 class="text-center">Bài tập này có @Model.Total câu hỏi</h6>
    </div>
    <div class="progress" style="height: 2px">
        <div class="progress-bar progress-bar-striped" role="progressbar" style="width: 10%" aria-valuenow="10" aria-valuemin="0" aria-valuemax="100"></div>
    </div>
    <div class="modal-header">
        <h5>1. @Model.QuestionContent</h5>
    </div>
    <div class="modal-body">
        <div id="loadbar" style="display: none;">
            <div class="bg-dack"></div>
            <div id="circle">
                <div class="loader">
                    <div class="loader">
                        <div class="loader">
                            <div class="loader">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div id="counters_admin">
            <span class="text-center" style="display: block; font-size: 25px; font-weight: bold">
                0:<span class="counter" data-TargetNum="@Model.Time" data-Speed="@(Model.Time * 1000)"
                        data-Direction="reverse" data-Easing="linear"></span>
            </span>
        </div>
        <div class="quiz" id="quiz" data-toggle="buttons">
            <label class="element-animation1 btn btn-lg btn-primary btn-block ans" data-ans="@(Model.ChooseTrue == "1" ? 1 : 0)">@Model.Choose1</label>
            <label class="element-animation2 btn btn-lg btn-danger btn-block ans" data-ans="@(Model.ChooseTrue == "2" ? 1 : 0)">@Model.Choose2</label>
            <label class="element-animation3 btn btn-lg btn-warning btn-block ans" data-ans="@(Model.ChooseTrue == "3" ? 1 : 0)">@Model.Choose3</label>
            <label class="element-animation4 btn btn-lg btn-success btn-block ans" data-ans="@(Model.ChooseTrue == "4" ? 1 : 0)">@Model.Choose4</label>
        </div>
    </div>
    <div class="modal-footer text-muted">
        <button type="button" style="display: none" id="show-top" class="btn btn-default" onclick="TopResult()">Kết quả</button>
    </div>
    @Html.HiddenFor(m=>m.QuestionId)
}
