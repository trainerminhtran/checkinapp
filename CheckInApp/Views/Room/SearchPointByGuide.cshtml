@model CheckInApp.ViewModels.ShowSearchPoint
@{
    ViewBag.Title = "Danh sách điểm cuả lớp";
    Layout = "~/Views/Shared/_UserLayout.cshtml";
}
@section Styles
{
    <link rel="stylesheet" href="../../plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
    <link rel="stylesheet" href="../../plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
    <link href="../../dist/bootoast.min.css" rel="stylesheet" type="text/css">
}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">

                <!-- Main content -->
                <div class="invoice p-3 mb-3">
                    <!-- title row -->
                    <div class="row">

                        <div class="col-12">

                            <div class="login-logo" style="background: #808080; padding: 30px 0px 40px 0;">
                                <a href="#" style="background: #808080;"><b>Samsung</b>DA Training</a>
                            </div>

                            <h2 class="login-box-msg">@Model.CourseName</h2>
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- info row -->
                    <div class="row invoice-info">

                        <div class="col-sm-4 invoice-col">
                            <strong> Date</strong>
                            <address>
                                Cập nhật ngày  @DateTime.Now.ToShortDateString()
                            </address>
                        </div>
                    </div>
                    <!-- /.row -->
                    <!-- Table Group store row -->
                    <div class="row">
                        <div class="col-12 table-responsive">
                            <h3 class="login-box-msg">Thứ tự siêu thị theo điểm trung bình test</h3>
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>STT</th>
                                        <th>
                                            Cửa hàng
                                        </th>

                                        <th>
                                            Tổng NV
                                        </th>
                                        <th>
                                            Tổng điểm
                                        </th>
                                        <th>
                                            Điểm trung bình
                                        </th>
                                        <th>
                                            Vị thứ
                                        </th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int stt = 0;
                                    }
                                    @foreach (var item in Model.Group)
                                    {
                                        stt++;
                                    <tr>
                                        <td class="text-center">
                                            @stt
                                        </td>
                                        <td>
                                            @item.Store
                                        </td>

                                        <td>
                                            @item.TotalMemberTested
                                        </td>

                                        <td>
                                            @item.TotalPoint
                                        </td>
                                        <td>
                                            @item.AvePoint
                                        </td>
                                        <td>
                                            @item.win
                                        </td>
                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->
                    <!-- Table row -->
                    <div class="row">
                        <div class="col-12 table-responsive">
                            <h3 class="login-box-msg">Tra cứu điểm từng nhân viên</h3>
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>STT</th>
                                        <th>MNV</th>
                                        <th>

                                            @Html.DisplayNameFor(model => model.UserFullname)
                                        </th>

                                        <th>
                                            @Html.DisplayNameFor(model => model.CountingScore)
                                        </th>
                                       
                                        <th>
                                            @Html.DisplayNameFor(model => model.Store)
                                        </th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int st = 0;
                                    }
                                    @foreach (var item in Model.ListPoint)
                                    {
                                        st++;
                                    <tr>
                                        <td class="text-center">
                                            @st
                                        </td>
                                        <td>
                                            @item.MNV
                                        </td>
                                        <td>
                                            @item.UserFullname
                                        </td>
                                        <td>
                                            @item.CountingScore
                                        </td>
                                        
                                        <td>
                                            @item.Store
                                        </td>

                                    </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->

                </div>
                <!-- /.invoice -->
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
@section Scripts{
    <!-- DataTables -->
    <script src="../../plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="../../plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="../../plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="../../plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <!-- Bootstrap Switch -->
    <script>
        $(function () {
            $('.table').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
                "pageLength": 10,
                "dom": 'Bfrtip',
                "buttons": [
                    'excel'
                ]
            });
        });
    </script>
}