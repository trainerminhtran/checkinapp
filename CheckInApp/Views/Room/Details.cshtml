@model CheckInApp.ViewModels.RoomToPrintViewModel
@{
    ViewBag.Title = "Danh sách điểm danh";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Styles
{
    <link href="../../dist/bootoast.min.css" rel="stylesheet" type="text/css">
}
<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-12">
                <div class="callout callout-info">
                    <h5>
                        @using (Html.BeginForm("RoomExport", "export", FormMethod.Post, new { enctype = "multipart/form-data", @id = "formID" }))
                        {
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="RoomId" value="@Model.RoomId" />
                            <button class="btn btn-default float-right" type="submit">Export trainer</button>
                        }
                    </h5>
                    <h5>
                        <i class="fas fa-info"></i> Note: <a href="/room/detailprint/@Model.RoomId" target="_blank" class="btn btn-default float-right"><i class="fas fa-print"></i> Print</a>
                    </h5>

                </div>


                <!-- Main content -->
                <div class="invoice p-3 mb-3">
                    <!-- title row -->
                    <div class="row">

                        <div class="col-12">

                            <div class="login-logo" style="background: #808080; padding: 30px 0px 40px 0;">
                                <a href="#" style="background: #808080;"><b>Samsung</b>DA Training</a>
                            </div>

                            <h2 class="login-box-msg ">@Model.CourseName - @Model.RoomName</h2>
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- info row -->
                    <div class="row invoice-info">
                        <div class="col-sm-4 invoice-col">
                            <strong>Trainer</strong>
                            <address>
                                @Model.TrainerName
                            </address>
                        </div>
                        <!-- /.col -->
                        <div class="col-sm-4 invoice-col">
                            <strong>
                                Venue
                            </strong>
                            <address>
                                @Model.VenueName
                            </address>
                        </div>
                        <div class="col-sm-4 invoice-col">
                            <strong> Date</strong>
                            <address>
                                @Model.DatetimeEnString
                            </address>
                        </div>
                    </div>
                    <!-- /.row -->
                    <!-- Table row -->
                    <div class="row">
                        <div class="col-12 table-responsive">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>STT</th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Attendences.FirstOrDefault().MNV)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Attendences.FirstOrDefault().UserID)
                                        </th>

                                        <th>
                                            @Html.DisplayNameFor(model => model.Attendences.FirstOrDefault().Name)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Attendences.FirstOrDefault().PositionName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Attendences.FirstOrDefault().Tel)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Attendences.FirstOrDefault().StoreName)
                                        </th>
                                        <th>
                                            @Html.DisplayNameFor(model => model.Attendences.FirstOrDefault().Signature)
                                        </th>

                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int stt = 0;
                                    }
                                    @foreach (var item in Model.Attendences)
                                    {
                                        stt++;
                                        <tr>
                                            <td class="text-center">
                                                @stt
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.MNV)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.UserID)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(model => item.Name)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.PositionName)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.Tel)
                                            </td>
                                            <td>
                                                @Html.DisplayFor(modelItem => item.StoreName)
                                            </td>
                                            <td>
                                                <img src="@item.Signature" width="80" alt="" />
                                            </td>

                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                        <!-- /.col -->
                    </div>
                    <!-- /.row -->

                </div>
                <!-- /.invoice -->
            </div><!-- /.col -->
        </div><!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
@section Scripts{
    <!-- DataTables -->
    <script src="../../plugins/datatables/jquery.dataTables.min.js"></script>
    <script src="../../plugins/datatables-bs4/js/dataTables.bootstrap4.min.js"></script>
    <script src="../../plugins/datatables-responsive/js/dataTables.responsive.min.js"></script>
    <script src="../../plugins/datatables-responsive/js/responsive.bootstrap4.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.7.0/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.7.0/js/buttons.html5.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.7.0/js/buttons.print.min.js"></script>
    <!-- Bootstrap Switch -->
    <script>
        $(function () {
            $('.table').DataTable({
                "paging": true,
                "lengthChange": true,
                "searching": true,
                "ordering": true,
                "info": true,
                "autoWidth": false,
                "responsive": true,
                "pageLength": 500,
                "dom": 'Bfrtip',
                "buttons": [
                    'excel'
                ]
            });
        });
    </script>
}